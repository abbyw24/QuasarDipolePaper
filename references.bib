	urldate = {2024-02-01},
	journal = {Astronomy \& Astrophysics},
	author = {Rubart, M. and Schwarz, D. J.},
	month = jul,
	year = {2013},
	note = {Publisher: EDP Sciences},
	pages = {A117},
}

